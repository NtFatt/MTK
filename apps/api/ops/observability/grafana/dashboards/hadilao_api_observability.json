{
  "uid": "hadilao-api-v15",
  "title": "Hadilao API - Observability (v15)",
  "tags": ["hadilao", "api", "observability"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "HTTP RPS",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(hadilao_http_requests_total[1m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "HTTP Error rate",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 * (sum(rate(hadilao_http_errors_total[5m])) / sum(rate(hadilao_http_requests_total[5m])))",
          "legendFormat": "%"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "HTTP p95 latency (ms)",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(hadilao_http_request_duration_ms_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "In-flight requests",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "hadilao_http_in_flight",
          "legendFormat": "in_flight"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "DB p95 query latency (ms)",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(hadilao_db_query_duration_ms_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Redis p95 command latency (ms)",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(hadilao_redis_command_duration_ms_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Slow DB/Redis rate",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(hadilao_db_slow_queries_total[5m]))",
          "legendFormat": "db_slow/s"
        },
        {
          "expr": "sum(rate(hadilao_redis_slow_commands_total[5m]))",
          "legendFormat": "redis_slow/s"
        }
      ]
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Runtime: RSS + Event loop p99 (ms)",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "hadilao_process_resident_memory_bytes",
          "legendFormat": "rss_bytes"
        },
        {
          "expr": "hadilao_event_loop_delay_p99_ms",
          "legendFormat": "event_loop_p99_ms"
        }
      ]
    }
  ]
}
